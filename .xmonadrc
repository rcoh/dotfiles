# Bind caps lock to escape
setxkbmap -layout us -option caps:escape

xcompmgr &

gnome-keyring-daemon --start --components=gpg,pkcs11,secrets,ssh

sleep 1

feh --bg-scale ~/background.jpg 

stalonetray \
  --icon-gravity E \
  --geometry 5x1-0+0 \
  --max-geometry 5x1-0+0 \
  --background '#000000' \
  --skip-taskbar \
  --icon-size 42 \
  --kludges force_icons_size \
  --window-strut none \
&


exec xmonad
