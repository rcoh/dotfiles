# Bind caps lock to escape
setxkbmap -layout us -option caps:escape


xcompmgr &

gnome-keyring-daemon --start --components=gpg,pkcs11,secrets,ssh

sleep 1

nm-applet &

xfce4-power-manager

# Start system tray
trayer --edge top --align right --SetDockType true --SetPartialStrut false --expand true --width 10 --height 42 --transparent true --tint 0x0000 &

feh --bg-scale ~/background.jpg 

exec xmonad
